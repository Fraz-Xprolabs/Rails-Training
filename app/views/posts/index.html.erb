<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 50) %></td>
        <td><%= post.published ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>
